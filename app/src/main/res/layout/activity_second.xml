<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondActivity">

        <Button
            android:id="@+id/alpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alpha"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rotation"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Button
            android:id="@+id/rotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rotation"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toEndOf="@id/alpha"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


        <Button
            android:id="@+id/rotationX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rotationX"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rotationY"
            app:layout_constraintBottom_toTopOf="@id/alpha" />

        <Button
            android:id="@+id/rotationY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rotationY"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toEndOf="@id/rotationX"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/rotation" />


        <Button
            android:id="@+id/scaleX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="scaleX"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/scaleY"
            app:layout_constraintBottom_toTopOf="@id/rotationX" />

        <Button
            android:id="@+id/scaleY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="scaleY"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toEndOf="@id/scaleX"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/rotationY" />


        <Button
            android:id="@+id/translationX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="translationX"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/translationY"
            app:layout_constraintBottom_toTopOf="@id/scaleY" />

        <Button
            android:id="@+id/translationY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="translationY"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toEndOf="@id/translationX"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/scaleY" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/translationX"
            android:src="@drawable/ic_mllogosvg" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
